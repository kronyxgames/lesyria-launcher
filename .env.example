# ======================================================
# Lesyria Game Launcher - Environment Variables Example
# ======================================================

# -------------------------------
# App Environment
# -------------------------------
NODE_ENV=development
PORT=3000
APP_NAME=Lesyria Game Launcher
APP_VERSION=1.0.0

# -------------------------------
# API Endpoints
# -------------------------------
LESYRIA_API_BASE_URL=https://api.lesyria.com
LESYRIA_AUTH_URL=https://sso.lesyria.com/oauth2/token
MOJANG_API_BASE_URL=https://authserver.mojang.com

# -------------------------------
# Authentication / Security
# -------------------------------
# JWT secret for local session encryption
JWT_SECRET=your_jwt_secret_here

# OAuth2 Client Configuration for Lesyria
LESYRIA_CLIENT_ID=your_client_id_here
LESYRIA_CLIENT_SECRET=your_client_secret_here
LESYRIA_REDIRECT_URI=http://localhost:3000/auth/callback

# -------------------------------
# Asset / CDN Configuration
# -------------------------------
ASSETS_CDN_URL=https://cdn.lesyria.com/assets
ASSETS_CACHE_DIR=./cache/assets

# -------------------------------
# Electron / Launcher Settings
# -------------------------------
ELECTRON_ENABLE_LOGGING=true
ELECTRON_DISABLE_GPU=false
ELECTRON_START_MINIMIZED=false

# -------------------------------
# Database (optional, for local caching)
# -------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=lesyria_user
DB_PASSWORD=secure_password_here
DB_NAME=lesyria_launcher_db

# -------------------------------
# Logging / Debugging
# -------------------------------
LOG_LEVEL=debug
LOG_FILE=./logs/launcher.log

# -------------------------------
# Optional / Advanced
# -------------------------------
# Max concurrent downloads for assets
MAX_DOWNLOAD_CONCURRENCY=5

# Feature toggles
ENABLE_BETA_FEATURES=false
ENABLE_AUTO_UPDATE=true